{
    "version": 2,
    "builds": [
        {
            "src": "src/web_app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "pythonVersion": "3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/web_app.py"
        }
    ],
    "env": {
        "PYTHONPATH": "src",
        "DATA_DIR": "data",
        "FLASK_APP": "src/web_app.py"
    }
} 